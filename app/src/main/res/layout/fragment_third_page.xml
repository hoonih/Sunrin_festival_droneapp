<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000"
    tools:context=".ThirdPageFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >

        <TextView
            android:id="@+id/page1koren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suitsemibold"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textAlignment="center"
            android:text="파리 기후 협약이 이행에 도움을 주기 위해\n‘공장과 산업단지 등에서 배출되는 온실가스를 감시하자’라는\n 목표를 가지고 있습니다."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suitsemibold"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginTop="22dp"
            android:text="To provide assistance to the Paris police Our goal is to 'reject future-oriented greenhouse gases in factories and industrial complexes.'"/>





    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>